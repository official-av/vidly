@model List<vidly.Models.Customer>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@if (Model.Count == 0)
{
    <text>No customers yet.</text>
}
else
{
    <ul>
        @foreach (var cust in Model)
        {
            <li><a href="/Customers/Details/@cust.Id">@cust.Name</a></li>
        }
    </ul>
}
